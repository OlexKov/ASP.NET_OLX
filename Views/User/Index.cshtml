@model Advert[]
@{
    ViewData["Title"] = "Оголошення";
}

<div class="d-flex flex-column gap-4 w-100">
    @foreach (var item in Model)
    {
        <div class=" w-100 d-flex  p-1 rounded border border-1 bg-white">
            <div style="min-height:140px;min-width:200px;max-height:140px;max-width:200px">
                <img style="object-fit: cover;" src="@item.AdvertImages.ElementAt(0).Image.Url" class="h-100 w-100 rounded-start" alt="...">
            </div>
            <div class="d-flex flex-column  p-1 w-100 mx-3">
                <div>
                    <div class="d-flex justify-content-between">
                        <h5 class="card-title">@item.Title</h5>
                        <h5 class="text-muted text-nowrap">@item.Price гр.</h5>
                    </div>
                    @if (item.IsNew)
                    {
                        <span class="badge bg-success p-2">Нове</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary p-2">Вживане</span>
                    }
                </div>
                <div class="d-flex justify-content-between mt-auto">
                    <small class="text-muted">@item.SellerName @item.City.Name </small>
                    <small class="text-muted">@item.Category.Name</small>
                </div>

            </div>
        </div>
    }
</div>



