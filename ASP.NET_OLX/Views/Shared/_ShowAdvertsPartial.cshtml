@inject IConfiguration Configuration

@model IEnumerable<AdvertDto>
@{
    string url = new Uri($"{Context.Request.Scheme}://{Context.Request.Host}/{Configuration["UserImgDir"]}/").AbsoluteUri;
}

<div class="d-flex flex-column gap-4 w-100">
    <input id="element-count" value="@Model.Count()" class="d-none" />
    @foreach (var item in Model)
    {
        <a asp-action="ShowAdvert" cursor:="pointer" asp-route-id="@item.Id" class="text-muted text-decoration-none">
            <div class=" w-100 d-flex  p-1 rounded border border-1 bg-white">
                <div style="min-height:140px;min-width:200px;max-height:140px;max-width:200px">
                    <img style="object-fit: cover;" src="@(url+ @item.FirstImage)" class="h-100 w-100 rounded-start">
                </div>
                <div class="d-flex flex-column  p-1 w-100 mx-3">
                    <div>
                        <div class="d-flex justify-content-between">
                            <h5 class="card-title">@item.Title</h5>
                            <h5 class="text-muted text-nowrap">@item.Price гр.</h5>
                        </div>
                        <span class="badge @(item.IsNew ? "bg-success" : "bg-secondary")  p-2">@(item.IsNew ? "Нове" : "Вживане")</span>
                    </div>
                    <div class="d-flex justify-content-between mt-auto">
                        <small class="text-muted">@item.SellerName @item.CityName </small>
                        <small class="text-muted">@item.CategoryName</small>
                    </div>
                </div>
            </div>
        </a>
    }
</div>