@model IEnumerable<AdvertDto>
@{
}
<div class="card text-center">
    <div class="card-header">
        My Cart
    </div>
    <div class="card-body">
        <h5 class="card-title">Product List</h5>

        <ul class="list-group">
            @foreach (var i in Model)
            {
                <li class="mb-3 list-group-item d-flex justify-content-between align-items-center">
                    @i.Title - @i.CategoryName
                    <span class="badge bg-primary rounded-pill">@i.Price$</span>
                </li>
            }
        </ul>
    </div>
    <div class="card-footer text-muted">
        Total: @Model.Sum(x => x.Price)$
    </div>
</div>