@model Advert[]

@{
    ViewData["Title"] = "Особистий кабінет";
}

<h3 class="mb-3">@ViewData["Title"]</h3>
<div>
    <a asp-action="AddAdvert" class="btn btn-primary">Нове оголошення</a>
</div>
<h3 class="my-2" >Mої оголошення</h3>
<div class="d-flex flex-column gap-4 w-100">
    @foreach (var item in Model)
    {
        <div class=" w-100 d-flex  p-1 rounded border border-1 bg-white">
            <div style="min-height:140px;min-width:200px;max-height:140px;max-width:200px">
                @if (@item.Images.Any())
                {
                    <img style="object-fit: cover;" src="@item.Images.ElementAt(0).Url" class="h-100 w-100 rounded-start">
                }
            </div>
            <div class="d-flex flex-column  p-1 w-100 mx-3">
                <div>
                    <div class="d-flex justify-content-between">
                        <h5 class="card-title">@item.Title</h5>
                        <h5 class="text-muted text-nowrap">@item.Price гр.</h5>
                    </div>
                    <span class="badge @(item.IsNew ? "bg-success" : "bg-secondary")  p-2">@(item.IsNew ? "Нове" : "Вживане")</span>
                </div>
                <div class="d-flex gap-2 my-auto justify-content-end ">
                    <a asp-action="AddAdvert" asp-route-id="@item.Id" class="btn btn-success">Редагувати</a>
                    <a asp-action="DeleteElement" asp-route-id="@item.Id" class="btn btn-danger">Видалити</a>
                </div>
                <div class="d-flex justify-content-between mt-auto">
                    <small class="text-muted">@item.Date.ToShortDateString()</small>
                    <small class="text-muted">@item.Category.Name</small>
                </div>
            </div>
        </div>
    }
</div>