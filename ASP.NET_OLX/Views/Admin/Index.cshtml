@model IEnumerable<AdvertDto>
@{
    ViewData["Title"] = "Сторінка адміністратора";
}

<h3 class="mb-3">@ViewData["Title"]</h3>
<meta charset="utf-8" />
<table class="table table-striped  table-hover">
    <thead class="table-dark">
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Фото</th>
            <th scope="col" class="text-nowrap">Ім'я продавця</th>
            <th scope="col">Місто</th>
            <th scope="col">Категорія</th>
            <th scope="col">Дата</th>
            <th scope="col">Опис</th>
            <th scope="col">Ціна</th>
            <th scope="col"></th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="align-middle">
                <td>@item.Id</td>
                <td>
                    <div title="<img class='w-100' src='@item.FirstImage'/>" data-bs-toggle="tooltip" data-bs-html="true" style="height:50px;width:70px" class="rounded-1" data-bs-placement="right">
                        <img style="object-fit:cover" src=@item.FirstImage class="h-100 w-100 p-0 border rounded-1" />
                    </div>
                </td>
                <td>@item.SellerName</td>
                <td>@item.CityName</td>
                <td>@item.CategoryName</td>
                <td>@item.Date.ToShortDateString()</td>
                <td>@item.Title</td>
                <td>@item.Price</td>
                <td><button onclick="Func_LoadPv(@item.Id)" type="button" data-bs-toggle="modal" data-bs-target="#infoModal" class="btn btn-success btn-sm">Інфо</button></td>
                <td><button onclick="setId(@item.Id)" type="button" data-bs-toggle="modal" data-bs-target="#infoModal" class="btn btn-danger btn-sm">Видалити</button></td>
            </tr>
        }
    </tbody>
</table>

<!-- Modal info -->
<div class="modal fade" id="infoModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="staticBackdropLabel"></h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body"></div>
            <div class="modal-footer">
                <a class="btn btn-danger">Видалити</a>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal"></button>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{
        <script src="~/js/admin_index_script.js"></script>
     }
}






